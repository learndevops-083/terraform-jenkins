pipeline {
  agent any
  
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/learndevops-083/terraform-jenkins.git'
      }
    }
    stage('Terraform Init') {
      steps {
        dir('terraform-jenkins') {
          sh 'terraform init'
        }
      }
    }
    stage('Terraform Plan') {
      steps {
        dir('terraform-jenkins') {
          sh 'terraform plan' 
        }
      }
    }
    stage('Terraform Apply') {
      steps {
        dir('terraform-jenkins') {
          sh 'terraform apply '
        }
      }
    }
    stage('Time to Kill?') {
            steps {
                input message: 'Destroy terraform resources?'
            }
        }
        stage('Search and Destroy') {
            steps {
                sh 'cd terraform-jenkins; terraform destroy --auto-approve'
            }
        }
  }
}
